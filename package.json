{
  "name": "szh-cli",
  "private": false,
  "version": "0.0.4",
  "description": "A front-end cli for starting your project quickly",
  "type": "commonjs",
  "main": "./bin/index.js",
  "bin": {
    "szh": "./bin/index.js"
  },
  "license": "MY LICENSE",
  "author": "suzhenghui",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf lib && tsc --outDir lib --module CommonJS",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "lint:fix": "eslint --fix --ext .ts,.tsx,.js,.jsx --quiet ./",
    "release": "tsx ./scripts/release.ts",
    "prepare": "husky install",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p -i CHANGELOG.md -s"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "lib",
    "bin",
    "templates",
    "README",
    "LICENSE"
  ],
  "keywords": [
    "szh cli"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "simple-git": "^3.24.0",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.4.1",
    "eslint": "^8.42.0",
    "execa": "^5.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "minimist": "^1.2.8",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "semver": "^7.6.3",
    "tsx": "^4.16.2",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhenghui-su/szh-cli.git"
  },
  "homepage": "https://github.com/zhenghui-su/szh-cli#README",
  "bugs": {
    "url": "https://github.com/zhenghui-su/szh-cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}